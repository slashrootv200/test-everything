<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>
  <android.support.design.widget.TextInputLayout
      android:id="@+id/error_state_text_input_layout_id"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:theme="@style/EditTextStyle3"
      android.support.design:errorEnabled="true"
      android.support.design:hintAnimationEnabled="false"
      android.support.design:hintEnabled="false"
  >
    <android.support.design.widget.TextInputEditText
        android:id="@+id/error_state_input_edit_text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Custom"
    />
  </android.support.design.widget.TextInputLayout>
</FrameLayout>